<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
<!--Premier ligne-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textSize="20sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!--Deuxieme ligne-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_weight="1"

            android:orientation="vertical"
            android:gravity="center"

            >

            <ImageView
                android:id="@+id/image10"
                android:layout_width="wrap_content"
                android:background="#f2f2f2"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/_01" />

            <ImageView

                android:id="@+id/image13"
                android:layout_width="wrap_content"

                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"


            >

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="TextView"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="Versions :"
                android:textColor="@color/black" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#31a7d7"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Height :"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewHeightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="180cm"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textViewWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Weight :"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewWeightValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="15.2 lbs"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/textViewGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Gender :"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewGenderValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="♂  ♀ "
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Category :"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewCategoryValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Seed         "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textViewAbilities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Abilities :"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textViewAbilitiesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Overgrow"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textViewType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Type : "
                    android:textColor="@color/black" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textTypeValue1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="TypeValue1"
                        android:background="#9bcc4f"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textTypeValue2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:background="#b881c7"
                        android:text="TypeValue2"
                        android:textColor="@color/white" />

                </LinearLayout>


                <TextView
                    android:id="@+id/textViewWeaknesses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Weaknesses : "
                    android:textColor="@color/black" />

                <!-- Quatrième ligne -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textWeaknessesValue1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="WeakValue1"
                        android:background="#fd7d24"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/textWeaknessesValue2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:text="WeakValue2"
                        android:background="#f366b5"
                        android:textColor="@color/white" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textWeaknessesValue3"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="WeakValue3"
                        android:background="#bdbcba"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textWeaknessesValue4"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="7dp"
                        android:background="#52c4e8"
                        android:text="WeakValue4"
                        android:textColor="@color/black" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        </LinearLayout>
    <!--Troisieme ligne-->




    </LinearLayout>


